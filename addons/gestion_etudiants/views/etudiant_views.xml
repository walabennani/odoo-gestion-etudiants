<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTION -->
    <record id="action_etudiants" model="ir.actions.act_window">
        <field name="name">Ã‰tudiants</field>
        <field name="res_model">gestion.etudiant</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_etudiants"
              name="Ã‰tudiants"
              parent="menu_gestion_root"
              action="action_etudiants"
              sequence="2"/>

    <!-- KANBAN VIEW -->
<record id="view_etudiant_kanban" model="ir.ui.view">
    <field name="name">gestion.etudiant.kanban</field>
    <field name="model">gestion.etudiant</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_small_column">
            <!-- Declare fields -->
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="classe_id"/>
            <field name="image_1920"/>

            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click card p-3 shadow rounded text-center">
                        <!-- IMAGE RESIZED -->
                        <field name="image_1920"
                               widget="image"
                               options="{'preview_image': 'image_1920', 'size': [100, 100]}"
                               style="width:100px; height:100px; object-fit:cover; border-radius:50%; margin-bottom:10px;"/>
                        
                        <strong class="text-primary d-block">
                            <t t-esc="record.name.value"/>
                        </strong>

                        <div class="text-muted mb-1">
                            <t t-esc="record.email.value"/>
                        </div>

                        <span class="badge bg-info">
                            Classe:
                            <t t-esc="record.classe_id.value"/>
                        </span>

                        <t t-if="record.phone.value">
                            <div class="mt-1">
                                <span class="badge bg-secondary">
                                    ğŸ“ <t t-esc="record.phone.value"/>
                                </span>
                            </div>
                        </t>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- TREE VIEW -->
    <record id="view_etudiant_tree" model="ir.ui.view">
        <field name="name">gestion.etudiant.tree</field>
        <field name="model">gestion.etudiant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="classe_id"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_etudiant_form" model="ir.ui.view">
    <field name="name">gestion.etudiant.form</field>
    <field name="model">gestion.etudiant</field>
    <field name="arch" type="xml">
        <form string="Ã‰tudiant">
            <sheet class="p-3">
                <group>
                    <!-- RESIZED IMAGE -->
                    <field name="image_1920" widget="image" 
                           options="{'size':[120,120]}" 
                           style="width:120px; height:120px; object-fit:cover; border-radius:50%;"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="classe_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
